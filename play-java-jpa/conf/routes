# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WeatherDataController.index()
GET     /weather                    controllers.WeatherDataController.getWeather()
GET     /clearThisHist              controllers.WeatherDataController.clearHistory()
GET     /clearAllHist               controllers.WeatherDataController.clearAllHistory()

POST    /restful/weather/newSearch/:name                    controllers.WeatherDataController.postNewSearchEntry(name:String)
PUT     /restful/weather/updateSearchCount/:name            controllers.WeatherDataController.putUpdatedSearchCount(name:String)
DELETE  /restful/weather/deleteSearch/:name                 controllers.WeatherDataController.deleteSearchEntry(name:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
